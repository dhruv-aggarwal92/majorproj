<html>
    <head>
        <title>
            <%= title %>
        </title>
    </head>
    <body>
        <h1>HOME HERE</h1>
        
        <section id="feed-posts">
            <h4>Posts</h4>
            <%if(locals.user){%>
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" cols="30" rows="3" required></textarea>
                <input type="submit" value="Post">
            </form>
            <%}%>
            <div></div>
            <%for(let post of user_post){%>
                <hr>
                                    <p>
                                        <%if(locals.user && cust.id == post.user.id){%>
                                            <small>
                                                <a href="/posts/destroy/<%= post.id %>">X</a>
                                            </small>
                                        <%}%>
                                        <ul id="li">
                                        <li><%= post.user.name %></li>
                                        <li><%= post.content %></li>
                                        <ul>
                                        <div class="post-comments">   
                                            <% if (locals.user){%>
                                                <form action="/comments/create" id="new-comment-form" method="POST">
                                                    <input type="text" name="content" cols="30" rows="1" placeholder="Your thoughts" required>
                                                    <input type="hidden" name="post" value="<%= post._id %>">
                                                    <input type="submit" value="Post">
                                                </form>
                                            <%}%>
                                            
                                            <div id="post-comments-list">
                                                
                                                <ul id="post-commets-<%=post._id%>">            <!--   A little diffrent from somthin we are doing  -->
                                                    <% for (comment of post.comments){%>
                                                        
                                                        <p>
                                                            <%if(locals.user && cust.id == comment.user.id){%>
                                                                <small>
                                                                    <a href="/comments/destroy/<%= comment.id %>">X</a>
                                                                </small>
                                                            <%}%>
                                                            <%= comment.content %>
                                                            <br>
                                                            <%= comment.user.name %> 
                                                        </p>
                                                    <%}%>
                                                </ul>
                                            </div>
                                        </div>
                                        </ul>
                                        </ul>
                                    </p>
                                    <%}%>            
            </div>
        </section>
        <section id="user_friends">
            <h4>Friends</h4>
            <%for(u of all_user){%>
                <% if(!locals.user){%>
                        <p>
                            <a href="/users/profile/<%= u.id %>"><%=u.name %></a>
                        </p>
                <%}else{%>
                    <% if(locals.user && u.id != cust.id){%>
                        <p>
                            <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
                        </p>
                    <%}%>
                <%}%>

            <%}%>

        </section>
    </body>
</html>